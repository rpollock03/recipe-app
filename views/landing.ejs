<%- include("./partials/header") %>

<div id="landing-background">
    <div id="landing-title">
        <h1>Welcome to Resapea!</h1>

        <p class="lead"><em>A simple web-app for storing your favourite recipes.</em> </p>
        <hr style="width:200px">
        <a id="landingSignupBtn" href="#" class="btn btn-lg btn-info">Sign-up</a>
        <a id="landingLoginBtn" href="#" class="btn btn-lg btn-info">Login</a>
        <br>

        <form id="landingLoginForm" action="/login" method="post" class="form-inline mx-auto">
            <div class="form-group mb-2">
                <input type="text" name="username" placeholder="username" class="form-control">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <input type="password" name="password" placeholder="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Login</button>
        </form>
        <form id="landingSignupForm" action="/register" method="post" class="form-inline mx-auto">
            <div class="form-group mb-2">
                <input type="text" name="username" placeholder="username" class="form-control">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <input type="email" name="email" placeholder="email" class="form-control">
            </div>
            <div class="form-group mb-2">
                <input type="password" name="password" placeholder="password" class="form-control">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <input type="password" name="confirmPassword" placeholder="confirm password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Sign up</button>
        </form>

    </div>

    <script>
        $("nav").hide();
        $("#landingLoginForm").hide();
        $("#landingSignupForm").hide();

        $("#landingLoginBtn").click(function () {
            $("#landingSignupForm").hide();
            $("#landingLoginForm").fadeToggle();
        });
        $("#landingSignupBtn").click(function () {
            $("#landingLoginForm").hide();
            $("#landingSignupForm").fadeToggle();
        });




    </script>
    <%- include("./partials/footer") %>

