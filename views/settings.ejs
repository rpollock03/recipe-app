<%- include("./partials/header") %>
<div class="container w-50">
    <h1 class="text-center pt-5"> Settings </h1>
    <form method="POST" id="settingsForm" action="/settings">

        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="text" class="form-control" id="email" required name="email" value="<%=email%>">
        </div>
        <div class=" form-group">
            <label for="oldPassword">Old Password </label>
            <input type="password" class="form-control" require id="oldPassword" name="oldPassword"
                placeholder="old password">
        </div>
        <div class=" form-group">
            <label for="newPassword">New Password </label>
            <input type="password" class="form-control" required id="newPassword" name="newPassword"
                placeholder="new password">
        </div>
        <div class=" form-group">
            <label for="confirmPassword">Confirm New Password </label>
            <input type="password" class="form-control" required id="confirmPassword" name="confirmPassword"
                placeholder="confirm new password">
        </div>
        <button class="btn btn-primary" id="submitChangesBtn" type="submit">Submit changes</button>

    </form>

</div>


<%- include("./partials/footer") %>


<script>
    //password validation
    $("#submitChangesBtn").click(function (event) {
        event.preventDefault();
        var password1 = $("#newPassword").val()
        var password2 = $("#confirmPassword").val()
        if (password1 != '' && password2 != '' && password1 != password2) alert("Passwords don't match!")
        if (password1 != '' && password1 == password2) {
            $("#settingsForm").submit();
        }
    })

</script>